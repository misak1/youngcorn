<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title>{% block title %}{% endblock title %} - {{ packageJson.name }} - {{ packageJson.description }}</title>

		<!-- Bootstrap -->
		<link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css" />

		<!-- common -->
		<link rel="stylesheet" href="/common/styles/common.css" />

{% block head %}{% endblock head %}
	</head>
	<body>
		<header class="t-header">
			<div class="container">
				<h1>{{ packageJson.name }} <small>{{ packageJson.description }}</small></h1>
			</div>
		</header>
		<div class="container">
			<div class="contents">
{% block main %}{% endblock main %}
			</div>
		</div>


		<!-- jQuery -->
		<script src="/bower_components/jquery/dist/jquery.js"></script>

		<!-- Bootstrap -->
		<script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>

		<!-- Twig -->
		<script src="/bower_components/twig.js/twig.js"></script>

		<!-- socket.io -->
		<script src="/socket.io/socket.io.js" type="text/javascript"></script>

		<!-- common -->
		<script src="/common/main.js"></script>

{% block foot %}{% endblock foot %}
	</body>
</html>
